<!DOCTYPE html>
<html lang="zh-Hant">
<head>
<!-- Meta -->
{^assign
  var="nav_breadcrumb"
  value=[
    ['text'=>'歌本專區'],
    ['text'=>($data.page_title|default:$data.book_title|escape)]
  ]
^}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="format-detection" content="telephone=no">
<meta name="keywords" content="{^$keywords|default^}">
<meta name="description" content="{^$description|default|strip:''^}">
<meta name="twitter:title" content="{^breadcrumb_meta main=$shop_name extra=$nav_breadcrumb^}">
<meta name="twitter:keywords" content="{^$keywords|default^}">
<meta name="twitter:description" content="{^$description|default|strip:''^}">
<meta name="twitter:site" content="{^link^}">
<meta property="og:title" content="{^breadcrumb_meta main=$shop_name extra=$nav_breadcrumb^}">
<meta property="og:keywords" content="{^$keywords|default^}">
<meta property="og:description" content="{^$description|default|strip:''^}">
<meta property="og:url" content="{^link^}">
<title>{^breadcrumb_meta main=$shop_name extra=$nav_breadcrumb^}</title>
<base href="{^insert name='base_url' nocache=true^}" data-theme="{^$theme_dir|default^}" data-lang="{^$lang_code|default^}">
<!-- Favicon -->
<link href="favicon.ico" rel="icon">
<link href="favicon.ico" rel="shortcut icon">
<link href="favicon-32x32.png" rel="icon" type="image/png" sizes="32x32">
<link href="favicon-16x16.png" rel="icon" type="image/png" sizes="16x16">
<link href="apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180">
<link href="site.webmanifest" rel="manifest">
<!-- Web Fonts -->
<!-- CSS RWD Core -->
<link href="assets/css/bootstrap.min.css" rel="stylesheet">
<!-- CSS Plugins -->
<link href="assets/css/plugins.min.css" rel="stylesheet">
<!-- CSS Customization -->
<link href="assets/css/custom.min.css" rel="stylesheet">
<!-- {^if $smarty.const.DEMO_MODE|default:false eq false^} -->
{^$stats_code_head|default^}
{^$data.stats_code_head|default^}
<!-- {^/if^} -->
</head>
<body>
<main>
  <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
  <div class="body-container">
    <div class="page-banner-frame" data-parallax="scroll" data-image-src="assets/images/page-banner-02.jpg">
      <div class="mask"></div>
      <h1>歌本專區</h1>
    </div>
    <section class="info-wrapper">
      <div class="global-headline">歌本資料</div>
      <div class="py-2">
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="picture-frame">
              <!-- {^if $data.picture_large and $data.show_img^} -->
              <img src="{^$data.picture_large^}" alt="{^$data.book_title|escape^}">
              <!-- {^else^} -->
              <img src="assets/images/default-image-book-645x645.png" alt="{^$data.book_title|escape^}">
              <!-- {^/if^} -->
            </div>
          </div>
          <div class="col-md-8 mb-4">
            <div class="item-frame">
              <dl class="list-item">
                <dt class="name">書名：</dt>
                <dd class="value">{^$data.book_title|escape^}</dd>
              </dl>
              <!-- {^if $data.author^} -->
              <dl class="list-item">
                <dt class="name">編者：</dt>
                <dd class="value">{^$data.author|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.first_edit_time^} -->
              <dl class="list-item">
                <dt class="name">初版時間：</dt>
                <dd class="value">{^$data.first_edit_time|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.publisher^} -->
              <dl class="list-item">
                <dt class="name">出版者：</dt>
                <dd class="value">{^$data.publisher|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.quasi_print^} -->
              <dl class="list-item">
                <dt class="name">准印者：</dt>
                <dd class="value">{^$data.quasi_print|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.ver_info^} -->
              <dl class="list-item">
                <dt class="name">其他版本資訊：</dt>
                <dd class="value">{^$data.ver_info|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.print_method^} -->
              <dl class="list-item">
                <dt class="name">印刷方式：</dt>
                <dd class="value">{^$data.print_method|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.page_num^} -->
              <dl class="list-item">
                <dt class="name">頁數：</dt>
                <dd class="value">{^$data.page_num|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.song_num^} -->
              <dl class="list-item">
                <dt class="name">歌曲數：</dt>
                <dd class="value">{^$data.song_num|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.song_lang^} -->
              <dl class="list-item">
                <dt class="name">歌曲使用語言：</dt>
                <dd class="value">{^$data.song_lang|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
              <!-- {^if $data.book_brief^} -->
              <dl class="list-item">
                <dt class="name">內容簡述：</dt>
                <dd class="value">{^$data.book_brief|escape^}</dd>
              </dl>
              <!-- {^/if^} -->
            </div>
          </div>
        </div>

      </div>

      <div class="global-headline" id="recorded-songs">收錄歌曲</div>
      <table class="table list-table-themes">
        <thead>
          <tr>
            <th class="w-px-80">編號</th>
            <th class="w-px-80">頁碼</th>
            <th>歌曲名稱</th>
            <th class="w-px-200">編者</th>
            <th class="w-px-400">標籤</th>
          </tr>
        </thead>
        <!-- {^foreach from=$relation_song item=item name=list^} -->
        {^assign var="show_page" value=ceil($smarty.foreach.list.iteration/50)^}
        <tbody data-show-page="{^$show_page^}"{^if $show_page neq 1^} class="d-none"{^/if^}>
          <tr>
            <td class="child-title text-lg-center" data-title="編號：">{^$item.sort_order^}</td>
            <td class="child-title text-lg-center" data-title="頁碼：">{^$item.page_code^}</td>
            <td class="child-title" data-title="歌曲名稱："><a href="{^$item.url^}">{^$item.zh_song_title|default:$item.en_song_title_1|default:$item.en_song_title_2|escape^}</a></td>
            <td class="child-title field-center" data-title="作曲者：">{^$item.composer_name|escape^}</td>
            <td class="child-title" data-title="標籤：">
              <div>
                <!-- {^if $item.relation_tags^} -->
                <ul class="td-tags">
                  <!-- {^foreach from=$item.relation_tags item=item^} -->
                  <li><a title="{^$item.tag_name|escape^}" href="{^$item.url^}">{^$item.tag_name|escape^}</a></li>
                  <!-- {^/foreach^} -->
                </ul>
                <!-- {^/if^} -->
              </div>
            </td>
          </tr>
        </tbody>
        <!-- {^/foreach^} -->
      </table>

      {^assign var="total_page" value=ceil(count($relation_song)/50)^}
      <!-- {^if $total_page ge 1^} -->
      <nav class="pagination-frame" data-js-effect="show-page">
        <ul class="pagination justify-content-center">
          <!-- {^section name=page loop=$total_page^} 分頁 -->
          <li class="page-item{^if $smarty.section.page.iteration eq 1^} active{^/if^}"><a class="page-link" data-go-page="{^$smarty.section.page.iteration^}" href="#">{^$smarty.section.page.iteration^}</a></li>
          <!-- {^/section^} -->
        </ul>
      </nav>
      <!-- {^/if^} -->
    </section>
  </div>
  <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</main>
<script async src="assets/js/plugins/require.min.js" data-main="assets/js/require-config.js"></script>
<!-- {^if $smarty.const.DEMO_MODE|default:false eq false^} -->
{^$stats_code_body|default^}
{^$data.stats_code_body|default^}
<!-- {^/if^} -->
</body>
</html>