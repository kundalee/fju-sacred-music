  <div class="body-container">
    <div class="page-banner-frame home" data-parallax="scroll" data-image-src="assets/images/page-banner-01.jpg">
      <div class="mask"></div>
    </div>
    <section class="welcome-wrapper">
      <div class="row">
        <div class="col d-none d-md-block"><div class="text-center"><img src="assets/images/sacred-music-logo.png" width="275"></div></div>
        <div class="col">
          <div class="heading-title">
            <div class="welcome">歡迎來到</div>
            <h1>天主教中文聖歌資料庫</h1>
          </div>
          <div class="widget-container">
            <form name="search-form" action="search.php" method="get" role="search">
            <div class="search-form">
              <input placeholder="快速搜尋關鍵字" class="form-control" type="text" name="q">
              <button class="btn" type="submit">
                <i class="fa fa-search" aria-hidden="true"></i>
                <span class="sr-only">Search</span>
              </button>
            </div>
            <div class="py-3 text-right"><a href="advanced.php" class="advanced-search">進階搜尋</a></div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <section class="home-popular-wrapper">
      <div class="global-title-frame">熱門歌曲</div>
      <div class="row">
        <!-- {^foreach from=$popular_song item=item name=list^} -->
        <div class="col-sm-6 col-md-3 list-item">
          <div class="item-frame">
            <div class="hp-picture"><a title="{^$item.zh_song_title|default:$item.en_song_title_1|default:$item.en_song_title_2|escape^}" href="{^$item.url^}">{^if $item.picture_large^}<img alt="{^$item.zh_song_title|default:$item.en_song_title_1|default:$item.en_song_title_2|escape^}" src="{^$item.picture_large^}" class="img-fluid">{^else^}<img alt="{^$item.zh_song_title|default:$item.en_song_title_1|default:$item.en_song_title_2|escape^}" src="assets/images/default-image-song-645x645.png" class="img-fluid">{^/if^}</a></div>
            <div class="hp-title"><a title="{^$item.zh_song_title|default:$item.en_song_title_1|default:$item.en_song_title_2|escape^}" href="{^$item.url^}">{^$item.zh_song_title|default:$item.en_song_title_1|default:$item.en_song_title_2|escape^}</a></div>
          </div>
        </div>
        <!-- {^/foreach^} -->
      </div>
    </section>
